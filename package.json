{
  "name": "com.dn.tailwind",
  "version": "1.0.0",
  "description": "Tailwind garage door controller integration",
  "main": "app.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mutate": "stryker run",
    "qa": "npm run check-types && npm run lint && npm run test:coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --no-warn-ignored --max-warnings=0",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/jest-runner": "^9.5.1",
    "@stryker-mutator/typescript-checker": "^9.5.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.3.10",
    "@types/jest": "29.5.14",
    "@types/node": "^22.13.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "ts-jest": "~29.4.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
